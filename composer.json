{
    "name": "xiaodi/tant",
    "description": "Ant Design Vue Pro For ThinkPHP 6",
    "type": "project",
    "keywords": [
        "framework",
        "thinkphp",
        "ORM"
    ],
    "homepage": "https://www.xiaodim.com/",
    "license": "Apache-2.0",
    "prefer-stable": true,
    "authors": [
        {
            "name": "xiaodi",
            "email": "liangjinbiao@live.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "topthink/framework": "^6.0.2",
        "topthink/think-orm": "^2.0",
        "topthink/think-annotation": "^1.0",
        "xiaodi/think-whoops": "1.1.*",
        "xiaodi/think-jwt": "^0.6.2",
        "topthink/think-migration": "^3.0",
        "topthink/think-multi-app": "^1.0",
        "overtrue/wechat": "~4.0",
        "xiaodi/think-permission": "v0.6.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^4.2",
        "friendsofphp/php-cs-fixer": "^2.14",
        "topthink/think-trace":"^1.0",
        "phpstan/phpstan": "0.12.*"
    },
    "autoload": {
        "psr-4": {
            "app\\": "app"
        },
        "psr-0": {
            "": "extend/"
        },
        "files": [
            "app/common.php",
            "extend/Tant/helper.php",
            "vendor/topthink/framework/src/helper.php"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "scripts": {
        "start": "php think run",
        "analyze": "vendor/bin/phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app --autoload-file=vendor/autoload.php",
        "post-autoload-dump": [
            "@php think service:discover",
            "@php think vendor:publish"
        ],
        "cs-fix": "php-cs-fixer fix $1"
    }
}
